<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Job Title"
            android:textAlignment="center"
            android:textColor="#3F51B5"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_job_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/tv_job_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_title" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Location"
            android:textColor="#808080"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView" />

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Job Salary"
            android:textAlignment="center"
            android:textColor="#E91E63"
            android:textSize="20dp"
            app:layout_constraintStart_toEndOf="@+id/iv_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_photo" />

        <TextView
            android:id="@+id/tv_job_description"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:text="Job Description"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/tv_salary"
            app:layout_constraintTop_toBottomOf="@+id/tv_salary" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_job_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_category"
            app:srcCompat="@drawable/ic_location_on_black_24dp" />

        <TextView
            android:id="@+id/tv_job_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Job ID"
            android:textColor="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/tv_job_title"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_host_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Host ID"
            android:textColor="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/tv_job_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_job_id" />

        <TextView
            android:id="@+id/tv_work_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Date"
            android:textColor="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/tv_job_id"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/tv_work_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Work Time"
            android:textColor="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/tv_work_date"
            app:layout_constraintTop_toBottomOf="@+id/tv_work_date" />

        <TextView
            android:id="@+id/tv_image_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/transparent"
            app:layout_constraintStart_toEndOf="@+id/tv_work_date"
            app:layout_constraintTop_toTopOf="@+id/tv_work_date" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>